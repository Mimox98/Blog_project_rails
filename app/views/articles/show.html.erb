<div class="w-4/5 mx-auto bg-white rounded-lg shadow-2xl p-10 mt-16 mb-16 flex flex-col">
  <h1 class="text-3xl font-bold mb-6 text-left"><%= @article.title %></h1>
  
  <p class="mb-8 text-gray-700 text-lg text-center flex-1"><%= @article.body %></p>
  
  <div class="flex justify-center space-x-4 mt-6">
    <%= link_to "Edit", edit_article_path(@article), class: "bg-yellow-400 text-white px-4 py-2 rounded hover:bg-yellow-500 transition" %>
    <%= link_to "Destroy", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition" %>
  </div>
</div>