<div class="w-4/5 mx-auto bg-white rounded-lg shadow-2xl  p-10 mt-8 mb-16">
  <h1 class="text-3xl font-bold mb-8 text-left">Articles</h1>
  <ul class="space-y-4 mb-8">
    <% @articles.each do |article| %>
      <li class="bg-gray-50 rounded shadow p-4 hover:bg-gray-100 transition">
        <%= link_to article.title, article, class: "text-blue-600 hover:underline font-semibold" %>
      </li>
    <% end %>
  </ul>
  <div class="text-right">
    <%= link_to "New Article", new_article_path, class: "inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition" %>
  </div>
</div>