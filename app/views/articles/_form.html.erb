<%= form_with model: article, class: "w-full" do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="text-red-500 text-sm mt-1"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_area :body, class: "w-full h-40 px-3 py-2 border rounded focus:outline-none focus:ring" %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-red-500 text-sm mt-1"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
<% end %>